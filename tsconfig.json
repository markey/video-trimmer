{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "outDir": "out",
    "rootDir": ".",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "scripts",
    "vite.renderer.config.ts"
  ]
}

